{% include 'partial/_header.html.twig' %}

<h1>Bienvenue sur la page des cocktails</h1>

<section class="cocktail-list">
	{# Boucle pour afficher les cocktails du tableau "cocktail" #}
	{% for cocktail in cocktails %}
		<article class="cocktail-card">
			<img src="{{ cocktail.image }}" alt="{{ cocktail.nom }}">
			<div class="cocktail-info">
				<h2>{{ cocktail.nom }}</h2>
				<p>{{ cocktail.description }}</p>
				<ul>
					{% for ingredient in cocktail.ingredients %}
						<li>{{ ingredient }}</li>
					{% endfor %}
				</ul>
				<p class="date">Date de cr√©ation: {{ cocktail.date_creation | date }}</p>
			</div>
		</article>
	{% endfor %}
</section>

