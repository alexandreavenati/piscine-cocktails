{% include 'partial/_aside-ad.html.twig' %}

<h1>{{ cocktail.nom }}</h1>

{# Plus besoin de boucle ici on veut juste afficher un cocktail en particulier #}
<section class="cocktail-list">
    <article class="cocktail-card">
        <img src="{{ cocktail.image }}" alt="{{ cocktail.nom }}">
        <div class="cocktail-info">
            <p>{{ cocktail.description }}</p>
            <ul>
                {% for ingredient in cocktail.ingredients %}
                    <li>{{ ingredient }}</li>
                {% endfor %}
            </ul>
            <p class="date">Date de cr√©ation : {{ cocktail.date_creation | date('d/m/Y') }}</p>
        </div>
    </article>
</section>

